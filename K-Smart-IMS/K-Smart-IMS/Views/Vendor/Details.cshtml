@model Vendor

@{
    ViewData["Title"] = "Vendor Details";
}

<h1>Vendor</h1>

<table class="table table-bordered table-sm">
    <thead>
        <tr class="thead-dark">
            <th>@Model.Name</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @foreach (var ba in Model.ItemVendors)
                {
                    <p>
                        <a asp-action="Details" asp-controller="Item"
                           asp-route-id="@ba.ItemId"
                           asp-route-slug="@ba.Item.Name.Slug()">
                            @ba.Item.Name
                        </a>
                    </p>
                }
            </td>
        </tr>
    </tbody>
</table>